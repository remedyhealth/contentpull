{
  "name": "contentpull",
  "description": "A contentful.js wrapper that adds simply sugar functions and the ability to parse responses.",
  "version": "2.0.0",
  "main": "index.js",
  "scripts": {
    "precommit": "npm run lint",
    "prepush": "npm t",
    "lint": "standard",
    "predoc": "rimraf docs",
    "doc": "jsdoc -c doc.json",
    "test": "nyc _mocha",
    "travis": "npm run precommit && npm t && nyc report --reporter=lcov"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/remedyhealth/contentpull.git"
  },
  "keywords": [
    "contentpull",
    "contentpull.js",
    "contentpul",
    "contentpul.js",
    "contentful",
    "contentful.js",
    "CDA",
    "parser",
    "reader",
    "promise"
  ],
  "author": "Remedy Health Media <support@remedyhealthmedia.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/remedyhealth/contentpull/issues"
  },
  "homepage": "https://github.com/remedyhealth/contentpull#readme",
  "dependencies": {
    "contentful": "^7.8.2",
    "lodash.clonedeep": "^4.5.0"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-subset": "^1.5.0",
    "husky": "^3.0.1",
    "jsdoc": "^3.6.3",
    "mitm": "^1.7.0",
    "mocha": "^6.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^14.1.1",
    "rimraf": "^3.0.0",
    "standard": "^13.1.0"
  },
  "files": [
    "src",
    "README.md"
  ],
  "nyc": {
    "include": [
      "src/**/*.js"
    ]
  }
}
